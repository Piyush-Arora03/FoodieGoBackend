generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  RESTAURANT
  RIDER
  ADMIN
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String?   // Optional for OAuth users
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  profile   Profile?
  roles     RoleProfile[]
}

model RoleProfile{
  id        String    @id @default(cuid())
  role      Role      
  user      User      @relation(fields: [userId], references: [id])
  userId    String    
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  @@unique([userId, role])
}

model Profile {
  id        String    @id @default(cuid())
  firstName String
  lastName  String
  phone     String?
  user      User      @relation(fields: [userId], references: [id])
  userId    String    @unique
}
