generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/order-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus{
  PENDING
  ACCEPTED_BY_RESTAURANT
  PREPARING
  READY_FOR_PICKUP
  OUT_FOR_DELIVERY
  DELIVERED
  CANCELLED
}

model Order{
  id String @id @default(cuid())
  status OrderStatus @default(PENDING)
  userId String 
  restaurantId String 
  items OrderItem[]
  totalAmount Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([restaurantId, userId])
}

model OrderItem{
  id String @id @default(cuid())
  orderId String
  order Order @relation(fields: [orderId], references: [id])
  menuItemId String
  quantity Int @default(1)
  price Float

  @@index([orderId, menuItemId])
}
